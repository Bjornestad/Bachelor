<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Bachelor.Views"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="Bachelor.Views.MainWindowView"
        Title="Bachelor">

    <Grid ColumnDefinitions="*, Auto">
        <ContentControl Grid.Column="0" x:Name="CameraContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <ContentControl Grid.Column="1" x:Name="KeybindContainer" Width="900" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>