<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Bachelor.Views"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="Bachelor.Views.MainWindowView"
        Title="Bachelor">

    <DockPanel LastChildFill="True">
        <!-- Right side panel (KeybindContainer) - always spans full height -->
        <ContentControl DockPanel.Dock="Right" x:Name="KeybindContainer" Width="900" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <!-- Left side panel with camera and output -->
        <Grid RowDefinitions="*, Auto">
            <ContentControl Grid.Row="0" x:Name="CameraContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <ContentControl Grid.Row="1" x:Name="OutputContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="280"/>
        </Grid>
    </DockPanel>
</Window>